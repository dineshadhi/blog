---
import "../styles/global.css";
const { id, data } = Astro.props.blog;
---

<a href={`/posts/${id}`} class="block p-4 rounded-lg">
    <div class="flex flex-col gap-3">
        <h2
            class="text-lg sm:text-xl lg:text-2xl font-medium leading-tight break-words"
        >
            {data.title}
        </h2>
        <p class="text-sm sm:text-base font-light text-gray-300">{data.date}</p>
    </div>
</a>

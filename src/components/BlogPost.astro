---
import "../styles/global.css";

// const { title, href, date } = Astro.props;
const { id, data } = Astro.props.blog;
---

<a href={`/posts/${id}`}>
    <div class="flex flex-col gap-2">
        <h1 class="text-2xl font-medium">
            {data.title}
        </h1>
        <h1 class="text-1xl font-light">{data.date}</h1>
    </div>
</a>

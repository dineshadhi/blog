---
import BlogTitle from "../components/BlogTitle.astro";
import BaseLayout from "./BaseLayout.astro";
import Linebreak from "../components/Linebreak.astro";

import "../styles/global.css";

const { title } = Astro.props.frontmatter;
---

<BaseLayout title={title}>
    <div
        class="flex flex-col px-5 py-5 gap-5 max-w-5xl mx-auto sm:px-6 md:px-8 lg:px-12 xl:px-16"
    >
        <div class="flex flex-col gap-4">
            <a
                href="/"
                class="underline decoration-solid"
                style="color: rgb(255, 169, 69)"
            >
                Home
            </a>
            <BlogTitle title={title} />
        </div>

        <Linebreak />
        <div class="prose prose-lg max-w-none">
            <slot />
        </div>
    </div>
</BaseLayout>

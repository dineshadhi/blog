---
import BlogTitle from "../components/BlogTitle.astro";
import BaseLayout from "./BaseLayout.astro";
import Linebreak from "../components/Linebreak.astro";

import "../styles/global.css";

const { title } = Astro.props.frontmatter;
---

<BaseLayout title={title}>
    <div
        class="flex flex-col px-8 py-8 gap-6 max-w-5xl mx-auto sm:px-6 md:px-18 lg:px-12 xl:px-16"
    >
        <BlogTitle title={title} />
        <Linebreak />
        <div class="prose prose-lg max-w-none">
            <slot />
        </div>
    </div>
</BaseLayout>

---
export interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Dinesh Adhithya's Blog" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <title>{title}</title>
    </head>
    <body>
        <main>
            <slot />
        </main>
    </body>
</html>

<style is:global>
    html {
        font-family:
            "Cousine Nerd Font", "Cousine", monospace, system-ui, sans-serif;
    }

    body {
        margin: 0;
        padding: 0;
        background: #1a1a1a;
        color: #e4e4e7;
        line-height: 1.6;
        font-family:
            "Cousine Nerd Font", "Cousine", monospace, system-ui, sans-serif;
    }

    * {
        box-sizing: border-box;
    }
</style>
